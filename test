# The main test script to clean, build, and test a new image

source config

# Clean up old containers and images
source clean

# Build test image
docker build --tag=${TEST_IMAGE_NAME} .

# Run a test container
JUPYTER_PORT=8888
TEST_SCRIPT="JSBSim --version && jupyter lab --ServerApp.token=''"
docker run  --rm -it -p $JUPYTER_PORT:8888 -v $(pwd)/lab:/root/workdir --name $TEST_CONTAINER_NAME $TEST_IMAGE_NAME /bin/bash -c "${TEST_SCRIPT}"
